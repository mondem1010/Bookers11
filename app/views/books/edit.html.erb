<div class="edit-box">
  <div class="container">
   <div class="row">

    <h1>Editing Book</h1>
     <%= form_for(@book) do |f| %>
      <h4>Title</h4>
     <%= f.text_field :title,class: "col-lg-8" %><br>
      <h4>Opinion</h4>
     <%= f.text_area :body,class: "col-lg-8"%><br>
     <div class="botan">
     <%= f.submit 'Update Book',class: "btn btn-primary col-md-8" %>
   </div>
     <% end %>

    <div class="links"><%=link_to "show",book_path(@book.id) %>|
    <%=link_to"back",books_path,class:"back"  %></div>
</div>
</div>
</div>