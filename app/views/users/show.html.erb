<% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<%= render 'users/template',  user: @user, book: @book %>



 <div class="col-lg-9">
 <h1>Books</h1>

 <table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
     <% @books.each do |book| %>
     <tr>
         <td>
     <span> 
      <%= attachment_image_tag book.user, :image, format: 'jpeg',fallback:"No_image.jpg",class: "iimg" %>
     </span>
    </td>
      <td><span><%= link_to book.title,book_path(book.id),class:"book_#{@book.id}" %></span></td>
      <td><span><%= book.body %></span></td>
     </tr>
     <% end %>
   </tbody>
 </table>
</div>
</div> 
