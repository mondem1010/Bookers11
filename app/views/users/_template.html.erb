

  <div class="container">
      <div class="row">
          <div class="col-lg-3">
 <h1>User info</h1>
      <%= attachment_image_tag user, :image, format: 'jpeg',fallback:"No_image.jpg" %>

       <table class="table table-striped">
        <thead>
          <tr>
            <td>
        <p class="name"> <span>name</span><%= user.name %></p>
            </td>
          </tr>
            <br>
            <td>
         <p class="introduction"> <span>introduction</span><%= user.introduction %></p>
            </td>
          </tr>
        </thead>
      </table>
    
      <%= link_to "", edit_user_path(user.id),class: "edit_user_#{@user.id} glyphicon glyphicon-wrench btn btn-default col-md-12" %>




<h1>New book</h1>

<%= form_for(book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title,class: "book_title col-lg-12"%>

    <h4>Opinion</h4>
    <div><%= f.text_area :body,class: "book_body col-lg-12"%>
    <br>
    <%= f.submit 'Create Book',class: "btn btn-primary col-md-12" %>
 
<% end %>

  </div> 
</div>